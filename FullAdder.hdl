/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    // Put you code here:
    HalfAdder(a = a, b = b, sum = halfAdder1sum, carry = halfAdder1carry);
    HalfAdder(a = halfAdder1sum, b = c, sum = sum, carry = halfAdder2carry);
    Or(a = halfAdder2carry, b = halfAdder1carry, out = carry);
}